// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Video {
  id                 String          @id @default(cuid())
  shop               String?          // Multi-tenant support
  title              String
  videoUrl           String
  thumbnailUrl       String
  firebasePath       String?
  shopifyFileId      String?
  source             String          
  duration           Int?
  processingStatus   String          @default("pending")
  processingProgress Int             @default(0)
  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @updatedAt
  
  videoProducts      VideoProduct[]
  widgetVideos       WidgetVideo[]
  
  @@index([shop])
}

model Product {
  id              String          @id @default(cuid())
  shop            String          
  shopifyId       String
  title           String
  handle          String?
  image           String?
  price           String?
  vendor          String?
  productType     String?
  variantId       String?
  productUrl      String?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  
  videoProducts   VideoProduct[]
  
  @@unique([shop, shopifyId]) 
  @@index([shop])
}

model VideoProduct {
  id        String   @id @default(cuid())
  videoId   String
  productId String
  position  Int      @default(0)
  createdAt DateTime @default(now())
  
  video     Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  @@unique([videoId, productId])
  @@index([videoId])
  @@index([productId])
}

model VideoPage {
  id          String      @id @default(cuid())
  shop        String?      // Multi-tenant support
  name        String      // Page title (e.g., "Homepage", "Product Page")
  pagePath    String      // URL path (e.g., "/", "/products/shoe")
  pageHandle  String?      // Shopify handle for the page
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  widgets     Widget[]
  
  @@unique([shop, pagePath]) // One page per shop per path
  @@index([shop])
}

model Widget {
  id          String        @id @default(cuid())
  pageId      String
  widgetType  String       
  status      String        @default("draft") // "draft", "live"
  isCreated   Boolean       @default(false) // Widget exists or not
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  
  page        VideoPage     @relation(fields: [pageId], references: [id], onDelete: Cascade)
  widgetVideos WidgetVideo[]
  
  @@unique([pageId, widgetType])
  @@index([pageId])
}

model WidgetVideo {
  id        String    @id @default(cuid())
  widgetId  String
  videoId   String
  position  Int       @default(0)
  createdAt DateTime  @default(now())
  visible   Boolean   @default(true)
  
  widget    Widget    @relation(fields: [widgetId], references: [id], onDelete: Cascade)
  video     Video     @relation(fields: [videoId], references: [id], onDelete: Cascade)
  
  @@unique([widgetId, videoId])
  @@index([widgetId])
  @@index([videoId])
}

model ShopPlan {
  shop               String  @id
  currentPlan        String  @default("free") 
  planUpdatedAt      DateTime @default(now())
  viewsThisPeriod    Int     @default(0)
  billingPeriodStart DateTime?
  billingPeriodEnd   DateTime?
}