// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Video {
  id            String          @id @default(cuid())
  title         String
  videoUrl      String
  thumbnailUrl  String
  firebasePath  String?
  source        String          
  duration      Int?
  processingStatus   String         @default("pending")
  processingProgress Int            @default(0)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  
  videoProducts VideoProduct[]
  pageVideos    PageVideo[]
}

model Product {
  id              String          @id @default(cuid())
  shop            String          
  shopifyId       String
  title           String
  handle          String?
  image           String?
  price           String?
  vendor          String?
  productType     String?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  
  videoProducts   VideoProduct[]
  
  @@unique([shop, shopifyId]) 
  @@index([shop])
}

model VideoProduct {
  id        String   @id @default(cuid())
  videoId   String
  productId String
  position  Int      @default(0)
  createdAt DateTime @default(now())
  
  video     Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  @@unique([videoId, productId])
  @@index([videoId])
  @@index([productId])
}

model VideoPage {
  id          String      @id @default(cuid())
  name        String
  pagePath    String
  widgetType  String      
  status      String      @default("draft") 
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  pageVideos  PageVideo[]
}

model PageVideo {
  id        String    @id @default(cuid())
  pageId    String
  videoId   String
  position  Int       @default(0)
  createdAt DateTime  @default(now())
  
  page      VideoPage @relation(fields: [pageId], references: [id], onDelete: Cascade)
  video     Video     @relation(fields: [videoId], references: [id], onDelete: Cascade)
  
  @@unique([pageId, videoId])
  @@index([pageId])
  @@index([videoId])
}