<!-- extensions/shoppable-videos/blocks/app-embed.liquid -->

{% if block.settings.enabled %}
  <div id="shoppable-videos-app" style="display:none;"
    data-shop="{{ shop.permanent_domain }}"
    data-path="{{ request.path }}"
    data-page-type="{{ request.page_type }}"
    data-product-handle="{% if product %}{{ product.handle }}{% endif %}"
    data-collection-handle="{% if collection %}{{ collection.handle }}{% endif %}"
  ></div>
  
  {{ 'app-styles.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'app-embed.js' | asset_url }}" defer></script>
{% endif %}

{% schema %}
{
  "name": "Shoppable Videos",
  "target": "body",
  "settings": [
    {
      "type": "checkbox",
      "id": "enabled",
      "label": "Enable Shoppable Videos",
      "default": true
    }
  ]
}
{% endschema %}